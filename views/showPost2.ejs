<html>
<head>
    <% include ./ejs/headerSetting.ejs %>
</head>
<body>
<% if (!isAuthenticated) { %>
    <script>
        alert('로그인이 필요한 서비스입니다.');
        window.location = '/';
    </script>
<% } else { %>
<% include ./ejs/navbar.ejs %>
<!-- Page Content -->
<div class="container">
    <div class="row">
    <!-- Post Content Column -->
    <div class="col-lg-8">
        <!-- Title -->
        <h1 class="mt-4"><%= post.title %></h1>
        <!-- Author -->
        <p class="lead">
        by
        <a href="#"><%= post.author %></a>
        </p>
        <hr>
        <!-- Date/Time -->
        <p>Posted on , <%= post.createAt.toString().replace('G', ')').substr(0, 2) %></p>
        <hr>
        <!-- Preview Image -->
        <img class="img-fluid rounded" src="http://papers.co/wallpaper/papers.co-mk74-snow-summer-blue-mountain-sky-cloud-nature-29-wallpaper.jpg" alt="">
        <hr>
        <!-- Post Content -->
        <p class="lead"><%= post.contents %></p>
        <hr>
    </div>
    </div>
</div>
<% } %>
</body>
</html>